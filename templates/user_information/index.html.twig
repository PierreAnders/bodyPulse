{% extends 'base.html.twig' %}

{% block title %}UserInformation index
{% endblock %}

{% block body %}
	<div class="flex justify-center items-center h-screen">
		<div class="w-2/3 h-2/3 bg-emerald-700 bg-opacity-50 flex justify-center items-center">
			{# <img src="{{ asset('img/female.svg') }}" alt="Description"> #}
			<div>
			<h1 class="p-8 text-2xl font-bold font-comfortaa">Profile</h1>
				{% for user_information in user_informations %}
					<div class="pl-8">
						<div class="">
							<span class="text-xl font-comfortaa">first name :</span>
							<span class="font-bold text-xl font-comfortaa">
								{{ user_information.firstName }}
							</span>
						</div>
						<div class="pt-2">
							<span class="text-xl font-comfortaa">last name :</span>
							<span class="font-bold text-xl font-comfortaa">{{ user_information.lastName }}
							</span>
						</div>
						<div class="pt-2">
							<span class="text-xl font-comfortaa">gender :</span>
							<span class="font-bold text-xl font-comfortaa">{{ user_information.gender }}
							</span>
						</div>
						<div class="pt-2">
							<span class="text-xl font-comfortaa">date of birth :</span>
							<span class="font-bold text-xl font-comfortaa">{{ user_information.dateOfBirth|date('Y-m-d') }}
							</span>
						</div>
						<div class="pt-2">
							<span class="text-xl font-comfortaa">height :</span>
							<span class="font-bold text-xl font-comfortaa">{{ user_information.height }}m
							</span>
						</div>
						<div class="pt-2">
							<span class="text-xl font-comfortaa">weight :</span>
							<span class="font-bold text-xl font-comfortaa">{{ user_information.weight }}kg
							</span>
						</div>
						<div class="pt-2">
							<span class="text-xl font-comfortaa">heart rate :</span>
							<span class="font-bold text-xl font-comfortaa">{{ user_information.heartRate }}bpm
							</span>
						</div>
						<div class="pt-2">
							<span class="text-xl font-comfortaa">IMC :</span>
							<span class="font-bold text-xl font-comfortaa">{{ user_information.bmi|round(1) }}
							</span>
						</div>
						<div
							class="mt-4 flex justify-between">
							{# <a href="{{ path('app_user_information_show', {'id': user_information.id}) }}" class="text-blue-500">show</a> #}
							<a href="{{ path('dashboard', {'id': user_information.id}) }}" class="font-bold text-lg font-comfortaa underline-offset-4"> <<< </a>
							<a href="{{ path('app_user_information_edit', {'id': user_information.id}) }}" class="font-bold text-lg font-comfortaa underline-offset-4">Edit</a>

						</div>
					</div>
				{% endfor %}
			</div>

			{% if user_informations|length == 0 %}
				<a href="{{ path('app_user_information_new') }}" class="font-comfortaa font-bold underline underline-offset-[6px] hover:text-gray-600 duration-300">Create Profile</a>
			{% endif %}
		</div>
	</div>

</div>{% endblock %}
